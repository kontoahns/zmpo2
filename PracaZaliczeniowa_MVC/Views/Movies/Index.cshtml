@model IEnumerable<PracaZaliczeniowa_MVC.Models.MovieModel>

@{
    ViewData["Title"] = "Strona główna";
    ViewData["class"] = "";
}

<div class="container">
    <div class="row mb-2">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-4 mb-4">
                    DZISIEJSZY SEANS FILMOWY
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table id="movie-list" class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tytuł filmu</th>
                        <th>Sala</th>
                        <th>Ocena filmu</th>
                        <th>Start</th>
                        <th>Zakończenie</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                        @if (item.cancelled == 1) {
                            ViewData["class"] = "table-danger";
                        } else {
                            ViewData["class"] = "";
                        }
                        <tr class="@ViewData["class"]">
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.room)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.rating) / 6
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.start)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.end)
                        </td>
                        <td class="text-rigth">
                            @Html.ActionLink("Szczegóły seansu", "Details", new { id=item.id  })
                        </td>
                    </tr>
                }
                <tbody>
                <tfoot>
                    <tr>
                        <th>Tytuł filmu</th>
                        <th>Sala</th>
                        <th>Ocena filmu</th>
                        <th>Start</th>
                        <th>Zakończenie</th>
                        <th>Akcje</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>